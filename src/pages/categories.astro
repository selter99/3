---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "Categories";
---
<BaseLayout pageTitle={pageTitle}>

<!doctype html><html lang="en"><head>
<link rel="preload" as="style" href="/assets/css/style.css">
<meta charset="utf-8"><meta name="viewport" content="width=device-width,initial-scale=1">
<title>Categories – CICIHERE</title>
<link rel="stylesheet" href="/assets/css/style.css"></head><body>

<header class="nav">
  <div class="container nav-inner">
    <a class="brand" href="/" data-active>CICIHERE</a>
    <nav class="menu">
      <a href="/" data-active>Home</a>
      <a href="/categories/" data-active>Categories</a>
      <a href="/brands/" data-active>Brands</a>
      <a href="/article/" data-active>Blog</a>
      <a href="/contact/" data-active>Contact</a>
    </nav>
  </div>
</header>

<div class="container page-hero">
  <div class="breadcrumbs">Home / Categories</div>
  <h2>Explore Categories</h2>
</div>
<section class="container section">
  <div class="grid grid-4">
    
    <article class="card product-card hover">
      <img loading="lazy" src="/assets/img/cover2.svg" alt="Item" decoding="async">
      <h3 style="margin:12px 0 6px">Sample Product 1</h3>
      <div class="small">Brand • ★★★★☆ (123)</div>
      <div style="display:flex;justify-content:space-between;align-items:center;margin-top:10px">
        <span class="product-price">$ 56</span>
        <a class="btn" href="/product/" style="padding:8px 12px;font-size:14px">View</a>
      </div>
    </article>

    <article class="card product-card hover">
      <img loading="lazy" src="/assets/img/cover3.svg" alt="Item" decoding="async">
      <h3 style="margin:12px 0 6px">Sample Product 2</h3>
      <div class="small">Brand • ★★★★☆ (123)</div>
      <div style="display:flex;justify-content:space-between;align-items:center;margin-top:10px">
        <span class="product-price">$ 63</span>
        <a class="btn" href="/product/" style="padding:8px 12px;font-size:14px">View</a>
      </div>
    </article>

    <article class="card product-card hover">
      <img loading="lazy" src="/assets/img/cover1.svg" alt="Item" decoding="async">
      <h3 style="margin:12px 0 6px">Sample Product 3</h3>
      <div class="small">Brand • ★★★★☆ (123)</div>
      <div style="display:flex;justify-content:space-between;align-items:center;margin-top:10px">
        <span class="product-price">$ 70</span>
        <a class="btn" href="/product/" style="padding:8px 12px;font-size:14px">View</a>
      </div>
    </article>

    <!-- (các card khác giữ nguyên, chỉ đổi src & href thành tuyệt đối) -->
  </div>
</section>

<footer class="footer">
  <div class="container footer-cols">
    <div>
      <div class="brand">CICIHERE</div>
      <p class="small">A compact, clean affiliate starter. UI only – no backend. Replace images & copy as you go.</p>
    </div>
    <div>
      <strong>Links</strong><br>
      <div class="small">
        <a href="/">Home</a><br>
        <a href="/categories/">Categories</a><br>
        <a href="/article/">Blog</a><br>
        <a href="/contact/">Contact</a>
      </div>
    </div>
    <div>
      <strong>Follow Us</strong><br>
      <div class="small">   </div>
    </div>
  </div>
</footer>
<script src="/assets/js/main.js" defer></script>

</body></html>

</BaseLayout>
