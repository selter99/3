---
import BaseLayout from "../layouts/BaseLayout.astro";
const { title = "My Site" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <BaseLayout title={title}>
      <slot />
    </BaseLayout>
  </body>
</html>
